#include <iostream>
using namespace std;

int main() {
	const char * path = "/home/shreeganesh/Documents/C++/Implementation-of-Data-Structures/FileOp/test.txt";
	FILE * fp;
	fp = fopen(path, "r");
	char buffer[] = { 'x' , 'y' , 'z' };

	if(fp == NULL){
		cout<<"Couldn't be opened"<<endl;
	}
	else{
		fwrite(buffer , sizeof(char), sizeof(buffer), fp);
		fclose(fp);
	}

	 long lSize;
	 char * read_buffer;
	 size_t result;



	return 0;
}
