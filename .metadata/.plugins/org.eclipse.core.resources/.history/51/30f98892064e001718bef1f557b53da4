#include <iostream>
using namespace std;

struct Point{
	float x,y;
};

struct Triangle{
	Point p[3];
};

void readPoint(Point &p){
	cout<<"Enter x and y coordinates : "<<endl;
	cin>>p.x>>p.y;
}

void readTriangle(Triangle &t){
	for(int i=0; i<3; i++){
		readPoint(t.p[i]);
	}
}

void printPoint(Point &p){
	cout<<"( "<<p.x<<" , "<<p.y<<" )"<<endl;
}

void printTraingle(Triangle &t){
	cout<<"Vertices of a triangle : "<<endl;
	for(int i = 0; i<3; i++){
		printPoint(t.p[i]);
	}
}

int main() {
	Triangle T1;
	readTriangle(T1);
	printTraingle(T1);
	return 0;
}
