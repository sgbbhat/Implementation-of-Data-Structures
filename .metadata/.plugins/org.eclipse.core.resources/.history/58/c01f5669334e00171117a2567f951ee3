#include <iostream>
using namespace std;

int main() {
	const char * path = "/home/shreeganesh/Documents/C++/Implementation-of-Data-Structures/FileOp/test.txt";
	FILE * fp;
	fp = fopen(&path, 'r');
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
